<materials>
	<material name="tent">
		<shader file="shader@standardfs.glsl"/>
		<texture sampler="g_albedo_map" file="texture@wood.png"/>
		<texture sampler="g_normal_map" file="texture@wood_NRM.png"/>
		<vector uniform="g_shininess" x="1.0"/>
		<vector uniform="g_x_tiling" x="1.0"/>
		<vector uniform="g_y_tiling" x="1.0"/>
		<vector uniform="g_x_offset" x="0.0"/>
		<vector uniform="g_y_offset" x="0.0"/>
		<vector uniform="g_dir_light.intensity" x="1.0"/>
		<vector uniform="g_dir_light.color" x="0.6" y="0.5" z="0.4" w="1.0"/>
		<vector uniform="g_dir_light.direction" x="0.3" y="-1.0" z="0.1"/>
		<vector uniform="g_albedo_color" x="0.1" y="0.05" z="0.07" w="1.0"/>
		<vector uniform="g_emission_color" x="0.0" y="0.0" z="0.0" w="0.0"/>
	</material>
	
	<material name="ground">
		<shader file="shader@standardfs.glsl"/>
		<texture sampler="g_albedo_map" file="texture@rock.png"/>
		<texture sampler="g_normal_map" file="texture@rock_NRM.png"/>
		<vector uniform="g_shininess" x="1.0"/>
		<vector uniform="g_x_tiling" x="5.0"/>
		<vector uniform="g_y_tiling" x="5.0"/>
		<vector uniform="g_x_offset" x="0.0"/>
		<vector uniform="g_y_offset" x="0.0"/>
		<vector uniform="g_dir_light.intensity" x="1.0"/>
		<vector uniform="g_dir_light.color" x="0.6" y="0.5" z="0.4" w="1.0"/>
		<vector uniform="g_dir_light.direction" x="0.3" y="-1.0" z="0.1"/>
		<vector uniform="g_albedo_color" x="0.1" y="0.05" z="0.07" w="1.0"/>
		<vector uniform="g_emission_color" x="0.0" y="0.0" z="0.0" w="0.0"/>
	</material>
	
	<material name="skybox">
		<shader file="shader@standardfs.glsl"/>
		<texture sampler="g_albedo_map" file="texture@skybox.png"/>
		<texture sampler="g_normal_map" file="texture@rock_NRM.png"/>
		<vector uniform="g_shininess" x="1.0"/>
		<vector uniform="g_x_tiling" x="1.0"/>
		<vector uniform="g_y_tiling" x="1.0"/>
		<vector uniform="g_x_offset" x="0.0"/>
		<vector uniform="g_y_offset" x="0.0"/>
		<vector uniform="g_dir_light.intensity" x="1.0"/>
		<vector uniform="g_dir_light.color" x="0.5" y="0.5" z="0.5" w="1.0"/>
		<vector uniform="g_dir_light.direction" x="0.0" y="0.0" z="0.0"/>
		<vector uniform="g_emission_color" x="0.05" y="0.05" z="0.05" w="1.0"/>
		<vector uniform="g_albedo_color" x="0.1" y="0.05" z="0.07" w="1.0"/>
	</material>
</materials>