\usepackage{listings}

% Custom colors
\usepackage{color}
\definecolor{deepblue}{rgb}{0,0,0.6}
\definecolor{deepred}{rgb}{0.6,0,0}
\definecolor{deepgreen}{rgb}{0,0.5,0}

\definecolor{codebg}{rgb}{0.95,0.95,0.95}
\definecolor{framecolor}{rgb}{0.85,0.85,0.85}

\lstdefinelanguage{XML}
{
  morestring=[b]",
  morestring=[s]{>}{<},
  morecomment=[s]{<?}{?>},
  stringstyle=\color{black},
  identifierstyle=\color{deepblue},
  keywordstyle=\color{cyan},
  morekeywords={xmlns,version,type,name,value,class,file,sampler,slot,injection,receiver}% list your attributes here
}

% XML style
\newcommand\xmlstyle{\lstset{
language=XML,
basicstyle=\ttm,
backgroundcolor=\color{codebg},
otherkeywords={self},             % Add keywords here
% keywordstyle=\ttb\color{deepblue},
emphstyle=\ttb\color{deepred},    % Custom highlighting style
% stringstyle=\color{deepgreen},
frame=single,                         % Any extra options here
frameround=tttt,
showstringspaces=false,            % 
% numbers=left,
% numberstyle=\color{gray},
framesep=6pt,
rulecolor=\color{framecolor},
numbersep=16pt
}}

% XML environment
\lstnewenvironment{xml}[1][]
{
\xmlstyle
\lstset{#1}
}
{}

% XML for external files
\newcommand\xmlexternal[2][]{{
\xmlstyle
\lstinputlisting[#1]{#2}}}

% XML for inline
\newcommand\xmlinline[1]{{\xmlstyle\lstinline!#1!}}
